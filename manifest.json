{
    "manifest_version": 2,
    "name": "NoShorts",
    "version": "1.0",
    "description": "Remove All YouTube Reels (ytd-reel-shelf-renderer elements) from YouTube Search Results.",
    "permissions": [
      "activeTab"
    ],
    "homepage_url": "https://github.com/sansquoi/NoShorts",
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["noshorts.js"]
      }
    ],
    "browser_action": {
        "default_icon": "icon.svg",
        "default_title": "NoShorts"
      },
    "icons": {
        "48": "icon.svg",
        "96": "icon.svg"
      }      
  }
  